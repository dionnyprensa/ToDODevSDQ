@model ToDO.Models.UserViewModel

@{
    var user = ViewData["User"];
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col s12 m8 l6 offset-m2 offset-l3 info">
            <h5 class="blue-text text-darken-2">Cambio de contraseña</h5>
        </div>

        @using (Html.BeginForm("ChangePassword", "Users", new { ViewBag.returnUrl }, FormMethod.Post, new {/* @class = "" */}))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            @Html.HiddenFor(m => m.UserName)
            @Html.HiddenFor(m => m.FirstName)
            @Html.HiddenFor(m => m.LastName)
            <div class="row">
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "red-text text-darken-2" })
                <div class="col s12 m8 l6 offset-l3 offset-m2 input-field">
                    <i class="material-icons prefix blue-text text-darken-2">https</i>
                    @Html.PasswordFor(x => x.Password, new { @class = "", placeholder = "Nueva Clave", required = "required" })
                    @*<label for="email" data-error="Error" data-success="Correcto">Password</label>*@
                </div>
            </div>
            <div class="row">
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "red-text text-darken-2" })
                <div class="col s12 m8 l6 offset-l3 offset-m2 input-field">
                    <i class="material-icons prefix blue-text text-darken-2">https</i>
                    <input class="" id="RePassword" name="RePassword" placeholder="Repita Nueva Clave" required="required" type="password">
                    @*<label for="email" data-error="Error" data-success="Correcto">Password</label>*@
                </div>
            </div>
            <div class="row">
                <div class="col s6 m4 l3 offset-m2 offset-l3">
                    <button type="button" onclick="back();" class="btn waves-effect blue darken-3"> Volver atrás </button>
                </div>
                <div class="col s5 m2 l2 offset-s1 offset-m2 offset-l1">
                    <button type="submit" class="btn waves-effect blue darken-3"> Cambiar </button>
                </div>
            </div>

            ; ViewData["User"] = user;
        }
    </div>
</div>